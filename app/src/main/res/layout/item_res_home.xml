<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <ImageButton
            android:id="@+id/res_img_home"
            android:layout_width="@dimen/res_img_home_size"
            android:layout_height="@dimen/res_img_home_size"
            android:background="@drawable/ava_dish"
            android:contentDescription="@string/dish_ava"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/res_name_home"
        style="@style/TitleFont"
        android:layout_width="@dimen/res_img_home_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/pizza"
        android:textAlignment="center"
        android:textColor="@color/black" />


</LinearLayout>