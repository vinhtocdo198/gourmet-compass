<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".general_ui.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="409dp"
                    android:layout_height="223dp"
                    android:layout_gravity="center"
                    android:background="@drawable/home_bg"
                    android:contentDescription="@string/background_home_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/search_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/navigate_to_browse"
                    app:layout_constraintBottom_toBottomOf="@+id/home_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.755" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/recent_res4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/baking_duck"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/recent_img4"
                            app:layout_constraintStart_toStartOf="@+id/recent_img4"
                            app:layout_constraintTop_toBottomOf="@+id/recent_img4" />

                        <ImageButton
                            android:id="@+id/recent_img4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/choiceres4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.9"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/recent_res3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/burger"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/recent_img3"
                            app:layout_constraintStart_toStartOf="@+id/recent_img3"
                            app:layout_constraintTop_toBottomOf="@+id/recent_img3" />

                        <ImageButton
                            android:id="@+id/recent_img3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/choiceres3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.624"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/recent_res1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pizza"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/recen_img1"
                            app:layout_constraintStart_toStartOf="@+id/recen_img1"
                            app:layout_constraintTop_toBottomOf="@+id/recen_img1" />

                        <ImageButton
                            android:id="@+id/recen_img1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/choiceres1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.076"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/recent_seach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gourmet_s_choice"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.054"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/recent_img2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/choiceres2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.348"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/recent_res2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pasta"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/recent_img2"
                            app:layout_constraintStart_toStartOf="@+id/recent_img2"
                            app:layout_constraintTop_toBottomOf="@+id/recent_img2" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/popular_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/restaurants_near_you"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.057"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:textColor="@color/black" />

                        <ImageButton
                            android:id="@+id/popular_img2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/nearres2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.357"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/popular_res2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/banh_hoi"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/popular_img2"
                            app:layout_constraintStart_toStartOf="@+id/popular_img2"
                            app:layout_constraintTop_toBottomOf="@+id/popular_img2" />

                        <ImageButton
                            android:id="@+id/popular_img1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/neares1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.085"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/popular_res1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/banh_mi"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/popular_img1"
                            app:layout_constraintStart_toStartOf="@+id/popular_img1"
                            app:layout_constraintTop_toBottomOf="@+id/popular_img1" />

                        <ImageButton
                            android:id="@+id/popular_img3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/nearres3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.636"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/popular_res3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/banh_trang"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/popular_img3"
                            app:layout_constraintStart_toStartOf="@+id/popular_img3"
                            app:layout_constraintTop_toBottomOf="@+id/popular_img3" />

                        <ImageButton
                            android:id="@+id/popular_img4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/nearres4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.92"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/popular_res4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pancake"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/popular_img4"
                            app:layout_constraintStart_toStartOf="@+id/popular_img4"
                            app:layout_constraintTop_toBottomOf="@+id/popular_img4" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/recom_res1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kfc"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/recom_img1"
                            app:layout_constraintStart_toStartOf="@+id/recom_img1"
                            app:layout_constraintTop_toBottomOf="@+id/recom_img1" />

                        <ImageButton
                            android:id="@+id/recom_img1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/newres1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.076"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/recommended"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/newly_opened"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.049"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/recom_img2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/newres2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.36"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/recom_res2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mc_donals"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/recom_img2"
                            app:layout_constraintStart_toStartOf="@+id/recom_img2"
                            app:layout_constraintTop_toBottomOf="@+id/recom_img2" />

                        <ImageButton
                            android:id="@+id/recom_img3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/newres3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.636"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/recom_res3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bun_cha"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/recom_img3"
                            app:layout_constraintStart_toStartOf="@+id/recom_img3"
                            app:layout_constraintTop_toBottomOf="@+id/recom_img3" />

                        <ImageButton
                            android:id="@+id/recom_img4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/newres4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.912"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/untitled_design" />

                        <TextView
                            android:id="@+id/recom_res4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mi_quang"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="@+id/recom_img4"
                            app:layout_constraintStart_toStartOf="@+id/recom_img4"
                            app:layout_constraintTop_toBottomOf="@+id/recom_img4" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/ic_app_name"
            android:contentDescription="@string/background_home_img" />

        <ImageButton
            android:id="@+id/search_bar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/navigate_to_browse"
            app:srcCompat="@drawable/ic_search_bar" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_30">

            <TextView
                style="@style/TitleFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/gourmet_s_choice"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/first_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/TitleFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/restaurants_near_you"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/second_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/TitleFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/newly_opened"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/third_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>