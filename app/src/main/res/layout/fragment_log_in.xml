    <Button
        android:id="@+id/google_btn"
        style="@style/TitleFont"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginVertical="@dimen/margin_15"
        android:background="@drawable/border_gg_sign_in"
        android:drawableStart="@drawable/ic_gg"
        android:paddingHorizontal="@dimen/padding_30"
        android:paddingVertical="@dimen/padding_10"
        android:text="Log in with Google"
        android:textAllCaps="false"
        android:textSize="@dimen/text_18" />

    <TextView
        style="@style/TitleFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_25"
        android:layout_marginEnd="@dimen/margin_30"
        android:text="Don't have an account?"
        android:textColor="@color/input_text_border"
        android:textSize="@dimen/text_16" />

    <Button
        android:id="@+id/btn_sign_up_bot"
        style="@style/TitleFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
