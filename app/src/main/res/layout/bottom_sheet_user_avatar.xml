<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btms_user_avatar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_20">

    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_drag_handle" />

    <Button
        android:id="@+id/btn_photo_lib"
        style="@style/TitleFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/btn_bottom_sheet"
        android:drawableStart="@drawable/ic_photo_lib"
        android:drawablePadding="-80dp"
        android:elevation="5dp"
        android:paddingStart="100dp"
        android:text="@string/photo_library"
        android:textAllCaps="false"
        android:textSize="@dimen/text_16"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_take_photo"
        style="@style/TitleFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_20"
        android:background="@drawable/btn_bottom_sheet"
        android:drawableStart="@drawable/ic_camera"
        android:drawablePadding="-90dp"
        android:elevation="5dp"
        android:paddingStart="100dp"
        android:text="@string/take_photo"
        android:textAllCaps="false"
        android:textSize="@dimen/text_16"
        tools:ignore="RtlSymmetry" />

</LinearLayout>
