<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    android:background="@color/app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:text="Name:"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>
        <EditText
            android:id="@+id/new_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="25dp"
            android:hint="Restaurant name"
            android:background="@drawable/edit_text_rectangle_shape"
            android:padding="12dp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:inputType="text"
            android:selectAllOnFocus="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="7dp"
            android:text="Address:"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="25dp"
            android:hint="Address line"
            android:background="@drawable/edit_text_rectangle_shape"
            android:padding="12dp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:inputType="text"
            android:selectAllOnFocus="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="7dp"
            android:text="Phone Number:"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:hint="0123456789"
            android:background="@drawable/edit_text_rectangle_shape"
            android:padding="12dp"
            android:fontFamily="serif"
            android:inputType="phone"
            android:textColor="@color/black"
            android:selectAllOnFocus="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="Opening Hours:"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>

        <EditText
            android:id="@+id/opening_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:hint="e.g. Monday"
            android:background="@drawable/edit_text_rectangle_shape"
            android:padding="12dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:selectAllOnFocus="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="7dp"
            android:text="Menu:"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>

        <EditText
            android:id="@+id/dropdown_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:hint="Add item"
            android:background="@drawable/edit_text_rectangle_shape"
            android:padding="12dp"
            android:fontFamily="serif"
            android:inputType="phone"
            android:textColor="@color/black"
            android:selectAllOnFocus="true"
            android:drawableEnd="@drawable/add_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="7dp"
            android:text="Photos:"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>
        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:drawableStart="@drawable/upload_img"
            android:textColor="@color/white"
            android:text="Upload"
            android:textAllCaps="false"
            android:background="@drawable/regular_button_structure"
            android:backgroundTint="@color/button_pressed_upload"

            />




    </LinearLayout>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/regular_button_structure"
        app:backgroundTint="@color/button_orange"
        />

</LinearLayout>