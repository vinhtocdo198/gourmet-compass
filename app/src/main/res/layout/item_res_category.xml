<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_5"
    android:layout_marginBottom="@dimen/margin_10"
    android:background="@drawable/bg_res_category"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/app_bg"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/res_category_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_shimmer"
            android:contentDescription="@string/restaurant_name" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/res_category_name"
        style="@style/TitleFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/margin_5"
        android:text="@string/name"
        android:textColor="@color/title_text"
        android:textSize="@dimen/text_16" />

</LinearLayout>