<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="15dp"
    android:background="@color/app_bg">

    <ImageView
        android:id="@+id/account_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/account_circle_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="7dp"
            android:text="Current Password:"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:hint="Enter current password"
            android:background="@drawable/edit_text_rectangle_shape"
            android:padding="12dp"
            android:fontFamily="serif"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:selectAllOnFocus="true"
            android:drawableEnd="@drawable/eye_icon"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="7dp"
            android:text="New Password:"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>

        <EditText
            android:id="@+id/user_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:hint="Enter new password"
            android:background="@drawable/edit_text_rectangle_shape"
            android:padding="12dp"
            android:fontFamily="serif"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:selectAllOnFocus="true"
            android:drawableEnd="@drawable/eye_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="Confirm Password:"
            android:textColor="@color/black"
            android:textSize="18sp"
            ></TextView>

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:hint="Confirm password"
            android:background="@drawable/edit_text_rectangle_shape"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:selectAllOnFocus="true"
            android:drawableEnd="@drawable/eye_icon"
            />
    </LinearLayout>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="Change"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/regular_button_structure"
        app:backgroundTint="@color/button_orange"
        />

</LinearLayout>